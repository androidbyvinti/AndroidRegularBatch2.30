<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bmpl.mansiappproject.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    <Button
        android:onClick="buttonClicked"
        android:id="@+id/contact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/contact"
        android:text="Contact 1"
        android:textSize="20sp"
        android:drawablePadding="16dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>

        <Button
            android:onClick="buttonClicked"
            android:layout_marginLeft="20dp"
            android:id="@+id/contact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/contact"
            android:text="Contact 2"
            android:textSize="20sp"
            android:drawablePadding="16dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:onClick="buttonClicked"
            android:id="@+id/contact3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/contact"
            android:text="Contact 3"
            android:textSize="20sp"
            android:drawablePadding="16dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>

        <Button
            android:onClick="buttonClicked"
            android:layout_marginLeft="20dp"
            android:id="@+id/contact4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/contact"
            android:text="Contact 4"
            android:textSize="20sp"
            android:drawablePadding="16dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

</LinearLayout>
