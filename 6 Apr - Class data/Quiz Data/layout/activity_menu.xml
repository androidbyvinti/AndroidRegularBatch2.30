<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bmpl.quizapp.MenuActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

    <Button
        android:layout_weight="1"
        android:layout_height="0dp"
        android:onClick="buttonClicked"
        android:layout_width="match_parent"
        android:text="C"
        android:background="@color/colorIndigo1"
        android:id="@+id/buttonc"/>

    <Button

        android:onClick="buttonClicked"
        android:id="@+id/buttoncplus"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="C++"
        android:background="@color/colorIndigo2"/>

    <Button
        android:onClick="buttonClicked"
        android:id="@+id/buttonJava"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="Java"
        android:background="@color/colorIndigo3"/>

    <Button
        android:onClick="buttonClicked"
        android:id="@+id/buttonDotNet"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text=".net"
        android:background="@color/colorIndigo4"/>

    <Button
        android:onClick="buttonClicked"
        android:id="@+id/buttonAndroid"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="Android"
        android:background="@color/colorIndigo5"/>

    <Button
        android:id="@+id/buttonPython"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="Python"
        android:background="@color/colorIndigo6"
        android:onClick="buttonClicked"/>

    </LinearLayout>

</LinearLayout>
